<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/fixtureCard"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="visible"
        android:id="@+id/fixtureInfo">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fHomeBadge"
            android:scaleType="fitCenter"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fAwayBadge"
            android:scaleType="fitCenter"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15:00"
            android:id="@+id/fTime"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fAddToCalendar"
            android:paddingTop="@dimen/_10sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="09/07/1992"
            android:id="@+id/fDate"
            android:layout_below="@+id/fTime"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/fHomeTeam"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  v  "
            android:id="@+id/vs"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/fAwayTeam"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:visibility="visible"
        android:id="@+id/socialSignIn"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_action_calendar_month"
            android:id="@+id/fAddToCalendar"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height = "@dimen/_30sdp"
            android:id="@+id/socialButton"
            android:textSize="16sp"
            android:src="@drawable/ic_share"
            android:layout_alignTop="@+id/fStadium"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height = "@dimen/_30sdp"
            android:id="@+id/fStadium"
            android:src="@drawable/ic_map"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>